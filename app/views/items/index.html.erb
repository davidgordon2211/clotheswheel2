<div class="cards">
  <% if @user.items.count == 0 %>
    <h2>Your wardrobe is empty!</h2>
    <%= link_to "Go ahead and add your first item", new_item_path, class: "nav-link"  %>
  <% else %>
    <% @items.each do |item| %>
        <div class="card-full">
          <div class="card-full-infos">
            <div>
              <h2><%= item.name %></h2>
              <p><%= item.clothes_type %></p>
              <p><%= item.color %></p>
            </div>
          </div>
            <%= cl_image_tag item.photo, height: 300, width: 300, crop: :fill %>
        </div>
        <hr>
    <% end %>
</div>
    <%= link_to "Add another item", new_item_path, class: "nav-link"  %>
  <% end %>
